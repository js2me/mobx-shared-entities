{
  "name": "mobx-swiss-knife",
  "version": "1.1.1",
  "scripts": {
    "prepare": "pnpm dev:install-hooks",
    "clean": "rimraf dist",
    "lint:check": "eslint . --fix",
    "ts:check": "tsc --noEmit",
    "check": "npm run lint:check && npm run ts:check",
    "prebuild": "npm run clean && npm run check",
    "build:watch": "npm run build && nodemon --watch src --ext ts --exec \"tsc && node ./post-build.mjs\"",
    "build": "tsc && node ./post-build.mjs",
    "pub": "PUBLISH=true pnpm run build",
    "pub-ci": "PUBLISH=true CI=true pnpm run build",
    "pub:patch": "PUBLISH=true PUBLISH_VERSION=patch pnpm run build",
    "pub:minor": "PUBLISH=true PUBLISH_VERSION=minor pnpm run build",
    "pub:major": "PUBLISH=true PUBLISH_VERSION=major pnpm run build",
    "test": "vitest run --config vitest.config.ts",
    "test:watch": "vitest watch --config vitest.config.ts",
    "test:coverage": "vitest run --config vitest.config.ts --coverage",
    "docs": "pnpm build && cd docs && pnpm dev",
    "docs:install": "cd docs && pnpm i",
    "docs:build": "cd docs && pnpm build",
    "docs:serve": "cd docs && pnpm preview",
    "dev": "pnpm test:watch",
    "dev:install-hooks": "if [ -z \"$CI\" ]; then lefthook install; fi"
  },
  "keywords": [
    "mobx"
  ],
  "author": "js2me",
  "license": "MIT",
  "description": "Set of various utilities designed to simplify development on MobX",
  "type": "module",
  "bugs": {
    "url": "https://github.com/js2me/mobx-swiss-knife/issues"
  },
  "homepage": "https://github.com/js2me/mobx-swiss-knife",
  "repository": {
    "type": "git",
    "url": "git://github.com/js2me/mobx-swiss-knife"
  },
  "dependencies": {
    "@faker-js/faker": "^9.6.0",
    "@types/lodash-es": "^4.17.12",
    "linked-abort-controller": "^1.1.0",
    "lodash-es": "^4.17.21",
    "yummies": "^4.5.0"
  },
  "peerDependencies": {
    "mobx": "^6.12.4"
  },
  "devDependencies": {
    "@changesets/changelog-github": "^0.5.1",
    "@changesets/cli": "^2.29.5",
    "@types/node": "^20.17.30",
    "@vitejs/plugin-react-swc": "^3.9.0",
    "@vitest/coverage-istanbul": "^3.1.3",
    "commitfmt": "^1.0.4",
    "eslint": "^8.57.1",
    "js2me-eslint-config": "^1.0.8",
    "js2me-exports-post-build-script": "^4.1.5",
    "jsdom": "^26.1.0",
    "lefthook": "^1.11.16",
    "nodemon": "^3.1.10",
    "rimraf": "^6.0.1",
    "typescript": "^5.8.3",
    "vitest": "^3.1.3"
  },
  "packageManager": "pnpm@9.5.0+sha512.140036830124618d624a2187b50d04289d5a087f326c9edfc0ccd733d76c4f52c3a313d4fc148794a2a9d81553016004e6742e8cf850670268a7387fc220c903"
}